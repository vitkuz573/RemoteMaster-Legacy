<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0-windows</TargetFramework>
    <AssemblyName>RemoteMaster.Client</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	<RootNamespace>RemoteMaster.Client</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <VersionPrefix>1.0.</VersionPrefix>
    <VersionSuffix>0</VersionSuffix>
	<Version>$(VersionPrefix)$(VersionSuffix)</Version>
	<FileVersion Condition="'$(BUILD_BUILDID)' != ''">$(VersionPrefix)$(BUILD_BUILDID)</FileVersion>
	<FileVersion Condition="'$(BUILD_BUILDID)' == ''">1.0.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" />
    <PackageReference Include="Microsoft.IO.RecyclableMemoryStream" />
    <PackageReference Include="SkiaSharp" />
    <PackageReference Include="System.Drawing.Common" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RemoteMaster.Client.Core\RemoteMaster.Client.Core.csproj" />
  </ItemGroup>

  <Target Name="AfterFileSystemPublish" AfterTargets="FileSystemPublish">
    <Exec Command="powershell.exe -ExecutionPolicy Bypass -File $(SolutionDir)scripts\sign.ps1" />
  </Target>

</Project>
