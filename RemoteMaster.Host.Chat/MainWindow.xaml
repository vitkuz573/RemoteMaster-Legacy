<Window x:Class="RemoteMaster.Host.Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteMaster.Host.Chat"
        mc:Ignorable="d"
        Title="Chat" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="ChatListBox" HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" VerticalAlignment="Top" Width="490"
                 ItemsSource="{Binding Messages}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Message}" Width="400" TextWrapping="Wrap" />
                        <Button Content="Delete" Command="{Binding DataContext.DeleteCommand, ElementName=ChatListBox}" CommandParameter="{Binding Id}" Width="60" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Left" Height="30" Margin="10,270,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="320,270,0,0" VerticalAlignment="Top" Width="80" Click="SendButton_Click"/>
    </Grid>
</Window>