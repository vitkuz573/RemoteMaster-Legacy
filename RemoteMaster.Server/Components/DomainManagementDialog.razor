<MudDialog>
    <DialogContent>
        <MudExpansionPanels>
            <MudExpansionPanel Text="Click to view affected hosts">
                @foreach (var (computer, connection) in Hosts)
                {
                    <MudText>@computer.Name (@computer.IPAddress)</MudText>
                }
            </MudExpansionPanel>
        </MudExpansionPanels>
        <MudTextField T="string" Label="Domain" @bind-Value="@_domain" />
        <MudTextField T="string" Label="Username" @bind-Value="@_username" />
        <MudTextField T="string" Label="Password" @bind-Value="@_password" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" AdornmentAriaLabel="Show Password" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="JoinDomain">Join Domain</MudButton>
        <MudButton Color="Color.Secondary" OnClick="LeaveDomain">Leave Domain</MudButton>
    </DialogActions>
</MudDialog>