<MudDialog ContentStyle="width: 500px;">
    <DialogContent>
        <MudExpansionPanels>
            <MudExpansionPanel Text="Click to view affected hosts">
                @foreach (var (computer, connection) in Hosts)
                {
                    <MudText>@computer.Name (@computer.IPAddress)</MudText>
                }
            </MudExpansionPanel>
        </MudExpansionPanels>
        <MudRadioGroup T="string" @bind-SelectedOption="@_selectedOption">
            <MudRadio Option="@("shutdown")">Shutdown</MudRadio>
            <MudRadio Option="@("reboot")">Reboot</MudRadio>
            <MudRadio Option="@("wakeup")">Wake Up</MudRadio>
        </MudRadioGroup>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Confirm">Confirm</MudButton>
    </DialogActions>
</MudDialog>
