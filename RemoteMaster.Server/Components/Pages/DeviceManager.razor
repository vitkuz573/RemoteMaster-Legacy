@page "/{Host}/devicemanager"

@rendermode InteractiveServer

@using RemoteMaster.Server.Abstractions
@using System.Linq

@inject IJSRuntime JsRuntime
@inject IAccessTokenProvider AccessTokenProvider
@inject ILogger<DeviceManager> Logger

@if (_deviceItems.Any())
{
    <div class="mx-auto mt-6 w-full max-w-7xl">
        @foreach (var deviceGroup in _deviceItems.GroupBy(device => device.DeviceClass))
        {
            <div class="mb-6 overflow-hidden rounded-lg border border-gray-200 shadow-lg">
                <button @onclick="() => TogglePanel(deviceGroup.Key)"
                        class="w-full px-6 py-4 bg-indigo-600 text-left text-lg font-semibold text-white hover:bg-indigo-700 transition duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    @deviceGroup.Key
                </button>

                @if (IsPanelOpen(deviceGroup.Key))
                {
                    <div class="divide-y divide-gray-100 border-t border-gray-200 bg-white">
                        @foreach (var device in deviceGroup)
                        {
                            <div class="flex items-center justify-between p-4 transition duration-300 hover:bg-gray-50">
                                <div class="flex-1">
                                    <p class="text-md font-semibold text-gray-800">@device.Name</p>
                                    <p class="text-sm text-gray-500">Manufacturer: @device.Manufacturer</p>
                                    <p class="text-sm text-gray-500">Hardware ID: @device.HardwareId</p>
                                    <p class="text-sm text-gray-500">Location Info: @device.LocationInfo</p>
                                </div>
                                <div class="flex space-x-4">
                                    @if (device.IsEnabled)
                                    {
                                        <button disabled class="rounded-lg bg-gray-400 px-4 py-2 text-sm text-white">
                                            Enable
                                        </button>
                                        <button @onclick="() => DisableDevice(device.DeviceInstanceId)"
                                                class="rounded-lg bg-red-600 px-4 py-2 text-sm text-white hover:bg-red-700 transition duration-300 focus:outline-none focus:ring-2 focus:ring-red-300">
                                            Disable
                                        </button>
                                    }
                                    else
                                    {
                                        <button @onclick="() => EnableDevice(device.DeviceInstanceId)"
                                                class="rounded-lg bg-green-600 px-4 py-2 text-sm text-white hover:bg-green-700 transition duration-300 focus:outline-none focus:ring-2 focus:ring-green-300">
                                            Enable
                                        </button>
                                        <button disabled class="rounded-lg bg-gray-400 px-4 py-2 text-sm text-white">
                                            Disable
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-gray-500">No devices found.</p>
}
