@page "/{Host}/devicemanager"

@rendermode InteractiveServer

@using RemoteMaster.Server.Abstractions
@using System.Linq

@inject IJSRuntime JsRuntime
@inject IAccessTokenProvider AccessTokenProvider
@inject ILogger<DeviceManager> Logger

@if (_deviceItems.Any())
{
    @foreach (var deviceGroup in _deviceItems.GroupBy(device => device.DeviceClass))
    {
        <div class="mx-auto mt-5 w-full max-w-6xl">
            <div class="mb-4 rounded border border-gray-300">
                <button @onclick="() => TogglePanel(deviceGroup.Key)" class="w-full px-4 py-3 bg-gray-200 text-left text-lg font-medium hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    @deviceGroup.Key
                </button>

                @if (IsPanelOpen(deviceGroup.Key))
                {
                    <div class="border-t border-gray-300 bg-white p-4">
                        @foreach (var device in deviceGroup)
                        {
                            <div class="mb-4 rounded border bg-gray-50 p-4">
                                <div class="mb-2">
                                    <p class="text-sm text-gray-600"><strong>Name:</strong> @device.Name</p>
                                    <p class="text-sm text-gray-600"><strong>Manufacturer:</strong> @device.Manufacturer</p>
                                    <p class="text-sm text-gray-600"><strong>Hardware Id:</strong> @device.HardwareId</p>
                                    <p class="text-sm text-gray-600"><strong>Compatible Ids:</strong> @device.CompatibleIds</p>
                                    <p class="text-sm text-gray-600"><strong>Location Info:</strong> @device.LocationInfo</p>
                                    <p class="text-sm text-gray-600"><strong>Service:</strong> @device.Service</p>
                                </div>
                                <div class="flex space-x-4">
                                    @if (device.IsEnabled)
                                    {
                                        <button disabled class="rounded bg-gray-400 px-4 py-2 text-white">
                                            Enable
                                        </button>
                                        <button @onclick="() => DisableDevice(device.DeviceInstanceId)" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300">
                                            Disable
                                        </button>
                                    }
                                    else
                                    {
                                        <button @onclick="() => EnableDevice(device.DeviceInstanceId)" class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300">
                                            Enable
                                        </button>
                                        <button disabled class="rounded bg-gray-400 px-4 py-2 text-white">
                                            Disable
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
}
else
{
    <p class="text-center text-gray-500">No devices found.</p>
}
