@page "/{Host}/access/new"

@rendermode InteractiveServer

<PageTitle>Access</PageTitle>

<div class="relative flex h-full">
    <!-- Main content area for remote control interface -->
    <div class="h-full flex-grow bg-gray-100 p-5">
        <h1 class="text-xl font-semibold">Remote Access: @Host</h1>
        <div class="mt-4 rounded bg-white p-4 shadow">
            <p>Remote host management interface will be displayed here.</p>
        </div>
    </div>

    <!-- Sidebar -->
    <div style="@(_isSidebarOpen ? "right:0" : "right:-256px")" class="fixed top-0 h-full w-64 bg-gray-800 p-5 text-white shadow-lg transition-all duration-500 ease-out">
        <h2 class="mb-4 text-lg font-bold">Settings</h2>

        <!-- Expandable Panels -->
        <div>
            <!-- General Settings Panel -->
            <div class="mb-4">
                <h3 class="flex cursor-pointer items-center text-sm font-semibold" @onclick='() => TogglePanel("general")'>
                    <svg class="mr-2 h-4 w-4 transition-transform duration-300" style="transform:@(_activePanels.Contains("general") ? "rotate(90deg)" : "rotate(0deg)")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    General Settings
                </h3>
                @if (_activePanels.Contains("general"))
                {
                    <div class="ml-4 mt-2 transition-all duration-300">
                        <label class="mt-2 flex items-center">
                            <input type="checkbox" class="form-checkbox mr-2 text-indigo-600" /> Enable Feature X
                        </label>
                        <label class="mt-2 flex items-center">
                            <input type="checkbox" class="form-checkbox mr-2 text-indigo-600" /> Enable Feature Y
                        </label>
                        <p class="mt-2 text-xs text-gray-400">These settings control the general behavior of the system.</p>
                    </div>
                }
            </div>

            <!-- Network Settings Panel -->
            <div class="mb-4">
                <h3 class="flex cursor-pointer items-center text-sm font-semibold" @onclick='() => TogglePanel("network")'>
                    <svg class="mr-2 h-4 w-4 transition-transform duration-300" style="transform:@(_activePanels.Contains("network") ? "rotate(90deg)" : "rotate(0deg)")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    Network Settings
                </h3>
                @if (_activePanels.Contains("network"))
                {
                    <div class="ml-4 mt-2 transition-all duration-300">
                        <label class="mt-2 flex items-center">
                            <input type="checkbox" class="form-checkbox mr-2 text-indigo-600" /> Enable Remote Access
                        </label>
                        <label class="mt-2 flex items-center">
                            <input type="checkbox" class="form-checkbox mr-2 text-indigo-600" /> Enable Local Access
                        </label>
                        <p class="mt-2 text-xs text-gray-400">Configure remote and local network access permissions.</p>
                    </div>
                }
            </div>

            <!-- Security Settings Panel -->
            <div class="mb-4">
                <h3 class="текст-sm flex cursor-pointer items-center font-semibold" @onclick='() => TogglePanel("security")'>
                    <svg class="mr-2 h-4 w-4 transition-transform duration-300" style="transform:@(_activePanels.Contains("security") ? "rotate(90deg)" : "rotate(0deg)")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    Security Settings
                </h3>
                @if (_activePanels.Contains("security"))
                {
                    <div class="ml-4 mt-2 transition-all duration-300">
                        <label class="mt-2 flex items-center">
                            <input type="checkbox" class="form-checkbox mr-2 text-indigo-600" /> Enable Firewall
                        </label>
                        <label class="mt-2 flex items-center">
                            <input type="checkbox" class="form-checkbox mr-2 text-indigo-600" /> Enable VPN
                        </label>
                        <p class="mt-2 text-xs text-gray-400">Manage security settings like firewall and VPN configuration.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Sidebar toggle button -->
        <div class="absolute inset-y-1/2 -left-6 flex h-12 w-6 cursor-pointer items-center justify-center rounded-bl-full rounded-tl-full bg-gray-800 hover:bg-gray-500" @onclick="ToggleSidebar">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
        </div>
    </div>
</div>
