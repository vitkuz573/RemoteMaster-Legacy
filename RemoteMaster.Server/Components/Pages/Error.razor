@page "/Error"

<PageTitle>Error</PageTitle>

<div class="rounded-md bg-red-100 p-4 text-red-800">
    <h1 class="text-xl font-bold">Error.</h1>
    <h2>An error occurred while processing your request.</h2>

    @if (ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code class="rounded bg-gray-200 p-1">@RequestId</code>
        </p>
    }

    @if (ExceptionDetails?.Error != null)
    {
        <div class="mt-3 rounded-lg bg-red-200 p-3 text-red-900">
            <p><strong>Error Message:</strong> @ExceptionDetails.Error.Message</p>
            <p><strong>Stack Trace:</strong> <pre>@ExceptionDetails.Error.StackTrace</pre></p>
        </div>
    }
</div>
