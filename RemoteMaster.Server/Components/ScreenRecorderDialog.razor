<MudDialog>
    <DialogContent>
        <MudExpansionPanels>
            <MudExpansionPanel Text="Click to view affected hosts">
                @foreach (var (computer, connection) in Hosts)
                {
                    <MudText>@computer.Name (@computer.IPAddress)</MudText>
                }
            </MudExpansionPanel>
        </MudExpansionPanels>
        <MudTextField Label="Output File Name" @bind-Value="@_outputFileName" />
        <MudTextField Label="Duration (in seconds)" @bind-Value="@_duration" />
        <MudCheckBox Checked="@_transferAfterRecording" Label="Transfer after recording?" />
        @if (_transferAfterRecording)
        {
            <MudTextField Label="Transfer Path" @bind-Value="@_transferPath" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="StartRecording">Start Recording</MudButton>
        <MudButton Color="Color.Secondary" OnClick="StopRecording">Stop Recording</MudButton>
    </DialogActions>
</MudDialog>