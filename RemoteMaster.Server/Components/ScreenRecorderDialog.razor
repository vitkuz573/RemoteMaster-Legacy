<MudDialog ContentStyle="width: 600px;">
    <DialogContent>
        <MudExpansionPanels>
            <MudExpansionPanel Text="Click to view affected hosts">
                @foreach (var (computer, connection) in Hosts)
                {
                    <MudText>@computer.Name (@computer.IPAddress)</MudText>
                }
            </MudExpansionPanel>
        </MudExpansionPanels>
        <MudTextField Label="Output File Name" @bind-Value="@_outputFileName" FullWidth />
        <MudTextField InputType="InputType.Number" Label="Duration (in seconds)" @bind-Value="@_duration" FullWidth />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="StartRecording">Start Recording</MudButton>
        <MudButton Color="Color.Secondary" OnClick="StopRecording">Stop Recording</MudButton>
    </DialogActions>
</MudDialog>