<div class="@GetPanelClasses()">
    <h3 class="flex items-center text-sm font-semibold" @onclick="Toggle" aria-expanded="@IsExpanded" aria-disabled="@IsDisabled" aria-label="@AriaLabel">
        @if (HeaderContent != null)
        {
            @HeaderContent
        }
        else
        {
            <span class="material-icons mr-2 transition-transform" style="@GetIconStyles()">
                @Icon
            </span>
            @Title
        }
    </h3>

    @if (IsExpanded)
    {
        <div class="ml-4 mt-2 transition-all" style="@GetContentStyles()">
            @ChildContent
        </div>
    }
</div>
