<div class="flex items-center justify-between bg-gray-800 px-6 py-4 text-white shadow-md">
    <!-- Left Section (Logo, Nav Links, etc.) -->
    <div class="flex items-center space-x-4">
        <!-- Logo or Title -->
        <h1 class="text-xl font-semibold">@Title</h1>

        <!-- Nav Links or Extra Buttons (Optional) -->
        @if (LeftContent != null)
        {
            <div class="hidden items-center space-x-4 md:flex">
                @LeftContent
            </div>
        }
    </div>

    <!-- Right Section (Actions, Profile, etc.) -->
    <div class="flex items-center space-x-4">
        <!-- Additional Buttons or Controls (Optional) -->
        @if (RightContent != null)
        {
            <div class="flex items-center space-x-4">
                @RightContent
            </div>
        }

        <!-- Optional Profile/Avatar -->
        @if (!string.IsNullOrEmpty(ProfileImageUrl))
        {
            <img src="@ProfileImageUrl" alt="Profile Image" class="border-2 h-10 w-10 rounded-full border-white shadow-sm" />
        }
    </div>
</div>