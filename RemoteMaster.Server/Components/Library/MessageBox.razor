@using RemoteMaster.Server.Components.Library.Abstractions
@using RemoteMaster.Server.Components.Library.Enums

@inject IDialogWindowService DialogService

<Dialog>
    <TitleContent>
        @if (TitleContent is null)
        {
            <TextBlock Typo="Typo.h6" Content="@Title" />
        }
        else
        {
            @TitleContent
        }
    </TitleContent>
    <DialogContent>
        @if (MessageContent is not null)
        {
            @MessageContent
        }
        else
        {
            @MarkupMessage
            @Message
        }
    </DialogContent>
    <DialogActions>
        <div tabindex="-1" @onkeydown="HandleKeyDown">
            @if (CancelButton is not null)
            {
                <CascadingValue Value="@_cancelCallback">
                    @CancelButton
                </CascadingValue>
            }
            else if (!string.IsNullOrWhiteSpace(CancelText))
            {
                <Button OnClick="OnCancelClicked" Label="@CancelText" />
            }
            @if (NoButton is not null)
            {
                <CascadingValue Value="@_noCallback">
                    @NoButton
                </CascadingValue>
            }
            else if (!string.IsNullOrWhiteSpace(NoText))
            {
                <MudButton OnClick="OnNoClicked">@NoText</MudButton>
            }
            @if (YesButton is not null)
            {
                <CascadingValue Value="@_yesCallback">
                    @YesButton
                </CascadingValue>
            }
            else if (!string.IsNullOrWhiteSpace(YesText))
            {
                <Button Color="ButtonColor.Primary" OnClick="OnYesClicked" Label="@YesText" />
            }
        </div>

    </DialogActions>
</Dialog>