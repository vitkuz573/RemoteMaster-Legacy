@using RemoteMaster.Server.Components.Library.Enums

@switch (Typo)
{
    case TypoType.H1:
        <h1 class="@TextClass" @attributes="AdditionalAttributes">@ChildContent</h1>
        break;
    case TypoType.H2:
        <h2 class="@TextClass" @attributes="AdditionalAttributes">@ChildContent</h2>
        break;
    case TypoType.H3:
        <h3 class="@TextClass" @attributes="AdditionalAttributes">@ChildContent</h3>
        break;
    case TypoType.H4:
        <h4 class="@TextClass" @attributes="AdditionalAttributes">@ChildContent</h4>
        break;
    case TypoType.H5:
        <h5 class="@TextClass" @attributes="AdditionalAttributes">@ChildContent</h5>
        break;
    case TypoType.H6:
        <h6 class="@TextClass" @attributes="AdditionalAttributes">@ChildContent</h6>
        break;
    default:
        <span class="@TextClass" @attributes="AdditionalAttributes">@ChildContent</span>
        break;
}
