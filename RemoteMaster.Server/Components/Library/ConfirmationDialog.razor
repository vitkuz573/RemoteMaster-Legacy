<Dialog>
    <DialogContent>
        <h2 class="text-lg font-semibold">@Title</h2>
        <p>@Message</p>
    </DialogContent>
    <DialogActions>
        <button class="rounded-md bg-blue-500 px-4 py-2 text-white" @onclick="Confirm">@ConfirmText</button>
        <button class="rounded-md bg-red-500 px-4 py-2 text-white" @onclick="Cancel">@CancelText</button>
    </DialogActions>
</Dialog>