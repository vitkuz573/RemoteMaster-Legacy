@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Caching.Memory
@using RemoteMaster.Server.Data

@inject UserManager<ApplicationUser> UserManager
@inject IMemoryCache MemoryCache

<div class="flex flex-col overflow-hidden rounded-lg bg-white text-gray-800">
    <div class="flex items-center justify-between bg-blue-800 px-6 py-4 text-white">
        <div>
            <div class="text-xl font-bold">@_username</div>
            <div class="text-sm">@_role</div>
        </div>
        <NavLink class="flex items-center gap-2 text-white opacity-75 transition-opacity duration-300 hover:opacity-100"
                 href="Account/Logout">
            Logout
        </NavLink>
    </div>
    <ul class="divide-y divide-gray-100">
        <li>
            <NavLink class="block px-6 py-4 text-gray-800 transition duration-300 hover:bg-blue-100 hover:text-blue-800"
                     href="Admin/Organizations"
                     ActiveClass="bg-blue-100 text-blue-800">
                Organizations
            </NavLink>
        </li>
        <li>
            <NavLink class="block px-6 py-4 text-gray-800 transition duration-300 hover:bg-blue-100 hover:text-blue-800"
                     href="Admin/Users"
                     ActiveClass="bg-blue-100 text-blue-800">
                Users
            </NavLink>
        </li>
        <li>
            <NavLink class="block px-6 py-4 text-gray-800 transition duration-300 hover:bg-blue-100 hover:text-blue-800"
                     href="Admin/CertificateAuthority"
                     ActiveClass="bg-blue-100 text-blue-800">
                Certificate Authority
            </NavLink>
        </li>
        <li>
            <NavLink class="block px-6 py-4 text-gray-800 transition duration-300 hover:bg-blue-100 hover:text-blue-800"
                     href="Admin/Jwt"
                     ActiveClass="bg-blue-100 text-blue-800">
                JWT
            </NavLink>
        </li>
    </ul>
</div>
