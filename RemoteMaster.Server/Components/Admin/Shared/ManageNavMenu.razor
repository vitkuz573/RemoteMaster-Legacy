@using System.Security.Claims

<div class="flex flex-col overflow-hidden rounded-lg bg-white shadow-lg">
    <!-- Header -->
    <AuthorizeView>
        <Authorized>
            <div class="flex items-center justify-between bg-linear-to-r from-indigo-500 to-indigo-700 px-6 py-4 text-white">
                <div>
                    <div class="text-2xl font-bold">@context.User.Identity!.Name</div>
                    <div class="text-sm">@context.User.FindFirstValue(ClaimTypes.Role)</div>
                </div>
                <NavLink class="flex items-center gap-2 text-white transition-opacity duration-300 hover:opacity-75"
                         href="Account/Logout">
                    <span class="material-icons">logout</span> Logout
                </NavLink>
            </div>
        </Authorized>
    </AuthorizeView>

    <!-- Menu Items -->
    <ul class="divide-y divide-gray-200">
        <li>
            <NavLink Match="NavLinkMatch.All" class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">home</span> Home
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/Organizations"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">business</span> Organizations
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/OrganizationalUnits"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">account_tree</span> Organizational Units
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/Users"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">group</span> Users
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/UserRights"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">lock</span> User Rights
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/Roles"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">admin_panel_settings</span> Roles
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/RoleClaims"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">assignment</span> Role Claims
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/CertificateAuthority"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">verified</span> Certificate Authority
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/Jwt"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">vpn_key</span> JSON Web Token
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/AuditLogs"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">assignment_turned_in</span> Audit Logs
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/SignInJournal"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">history_edu</span> SignIn Journal
            </NavLink>
        </li>
    </ul>
</div>
