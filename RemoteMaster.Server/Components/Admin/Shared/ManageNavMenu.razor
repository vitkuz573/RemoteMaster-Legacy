@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Caching.Memory
@using RemoteMaster.Server.Data

@inject UserManager<ApplicationUser> UserManager
@inject IMemoryCache MemoryCache

<div class="flex flex-col overflow-hidden rounded-lg bg-white shadow-lg">
    <!-- Header -->
    <div class="flex items-center justify-between bg-gradient-to-r from-indigo-500 to-indigo-700 px-6 py-4 text-white">
        <div>
            <div class="text-2xl font-bold">@_username</div>
            <div class="text-sm">@_role</div>
        </div>
        <NavLink class="flex items-center gap-2 text-white transition-opacity duration-300 hover:opacity-75"
                 href="Account/Logout">
            <span class="material-icons">logout</span> Logout
        </NavLink>
    </div>
    <!-- Menu Items -->
    <ul class="divide-y divide-gray-200">
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/Organizations"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">business</span> Organizations
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/OrganizationalUnits"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">account_tree</span> Organizational Units
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/Users"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">people</span> Users
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/EditUsers"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">people</span> User Rights
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/CertificateAuthority"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">verified_user</span> Certificate Authority
            </NavLink>
        </li>
        <li>
            <NavLink class="flex items-center px-6 py-4 text-gray-800 transition duration-300 hover:bg-indigo-50 hover:text-indigo-700"
                     href="Admin/Jwt"
                     ActiveClass="bg-indigo-50 text-indigo-700">
                <span class="material-icons mr-3">security</span> JWT
            </NavLink>
        </li>
    </ul>
</div>
