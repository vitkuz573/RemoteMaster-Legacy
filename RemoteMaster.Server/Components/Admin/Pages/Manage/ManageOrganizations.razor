@page "/Admin/Organizations"

@namespace RemoteMaster.Server.Components.Admin.Pages

@using RemoteMaster.Server.Components.Account
@using RemoteMaster.Server.Components.Account.Shared
@using RemoteMaster.Server.Data

@inject ApplicationDbContext ApplicationDbContext

<PageTitle>Manage Organizations</PageTitle>

<div class="flex min-h-screen flex-col items-center justify-center bg-gray-900 px-4 py-10 sm:px-6 lg:px-8">
    
    <!-- Form Card -->
    <div class="mb-10 w-full max-w-4xl rounded-lg bg-white shadow-xl">
        <div class="p-8">
            <h2 class="mb-4 text-center text-3xl font-bold text-gray-800">Manage Organizations</h2>
            <EditForm Model="Input" OnValidSubmit="OnValidSubmitAsync" class="space-y-6" FormName="CreateOrganization">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-red-500" role="alert" />

                <div class="grid-cols-3 grid gap-6">
                    <div class="col-span-3">
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <InputText @bind-Value="Input.Name" id="name" class="mt-1 block w-full rounded-md border border-gray-300 bg-white px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                        <ValidationMessage For="() => Input.Name" class="text-red-500 mt-1" />
                    </div>
                </div>

                <button type="submit" class="w-full rounded-md bg-indigo-600 px-4 py-2 text-lg text-white hover:bg-indigo-700 focus:outline-none">
                    Create
                </button>
            </EditForm>
        </div>
    </div>

    <!-- Organizations Table Card -->
    <div class="w-full max-w-4xl rounded-lg bg-white shadow-xl">
        <div class="p-8">
            <h3 class="leading-6 text-lg font-medium text-gray-900">Current Organizations</h3>
            <div class="mt-4">
                <div class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
                                    Name
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 bg-white">
                            @foreach (var organization in _organizations)
                            {
                                <tr>
                                    <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">
                                        @organization.Name
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>