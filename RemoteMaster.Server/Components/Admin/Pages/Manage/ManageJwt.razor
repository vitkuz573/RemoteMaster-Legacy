@page "/Admin/Jwt"

@rendermode InteractiveServer

@using Microsoft.Extensions.Options
@using RemoteMaster.Server.Models

@inject IJSRuntime JsRuntime
@inject IOptions<JwtOptions> Jwt

<PageTitle>Manage JWT</PageTitle>

<div class="flex flex-wrap">
    <div class="mb-6 w-full px-3 md:w-1/2">
        <div class="space-y-6">
            <div class="grid-cols-1 grid gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Keys Directory</label>
                    <input type="text" value="@_keysDirectory" class="mt-1 block w-full rounded-md border border-gray-300 bg-white px-3 py-2 shadow-sm focus:outline-none" readonly />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Key Size</label>
                    <input type="text" value="@_keySize" class="mt-1 block w-full rounded-md border border-gray-300 bg-white px-3 py-2 shadow-sm focus:outline-none" readonly />
                </div>
            </div>

            <button @onclick="ExportKeysAsync" class="w-full rounded-md bg-indigo-600 px-4 py-2 text-lg text-white hover:bg-indigo-700 focus:outline-none">
                Export
            </button>
        </div>
    </div>
</div>
