@typeparam TValue

<select multiple @onchange="OnChange" class="mt-1 block w-full rounded-md border border-gray-300 bg-white px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
    @foreach (var option in Options)
    {
        <option value="@option.Value" selected="@(SelectedValues.Contains(option.Value))">@option.Text</option>
    }
</select>
