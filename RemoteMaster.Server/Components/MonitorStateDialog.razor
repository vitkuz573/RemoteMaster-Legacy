@using RemoteMaster.Shared.Models

<MudDialog>
    <DialogContent>
        <MudExpansionPanels>
            <MudExpansionPanel Text="Click to view affected hosts">
                @foreach (var (computer, connection) in Hosts)
                {
                    <MudText>@computer.Name (@computer.IPAddress)</MudText>
                }
            </MudExpansionPanel>
        </MudExpansionPanels>
        <MudRadioGroup T="MonitorState" @bind-SelectedOption="@_monitorState">
            @foreach (MonitorState monitorState in Enum.GetValues(typeof(MonitorState)))
            {
                <MudItem xs="12">
                    <MudRadio Option="@monitorState" Dense="true">@monitorState.ToString()</MudRadio>
                </MudItem>
            }
        </MudRadioGroup>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="SetState">Set State</MudButton>
    </DialogActions>
</MudDialog>
