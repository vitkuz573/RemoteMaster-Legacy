@inherits CommonDialogBase
@using RemoteMaster.Shared.Models

<CommonDialog Hosts="@Hosts">
    <Content>
        <MudRadioGroup T="MonitorState" @bind-SelectedOption="@_monitorState">
            @foreach (MonitorState monitorState in Enum.GetValues(typeof(MonitorState)))
            {
                <MudItem xs="12">
                    <MudRadio Option="@monitorState" Dense="true">@monitorState</MudRadio>
                    </MudItem>
            }
        </MudRadioGroup>
    </Content>

    <Actions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="SetState">Set State</MudButton>
    </Actions>
</CommonDialog>
