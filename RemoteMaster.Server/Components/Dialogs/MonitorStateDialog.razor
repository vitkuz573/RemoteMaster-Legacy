@inherits CommonDialogBase

@using RemoteMaster.Server.Abstractions
@using RemoteMaster.Shared.Enums

@inject IHostCommandService HostCommandService

<CommonDialog>
    <Content>
        <MudRadioGroup T="MonitorState" @bind-Value="@_monitorState">
            @foreach (MonitorState monitorState in Enum.GetValues(typeof(MonitorState)))
            {
                <MudItem xs="12">
                    <MudRadio Value="@monitorState" Dense="true">@monitorState</MudRadio>
                </MudItem>
            }
        </MudRadioGroup>
    </Content>

    <Actions>
        <MudButton Color="Color.Primary" OnClick="SetState" Disabled="HasConnectionIssues">Set State</MudButton>
    </Actions>
</CommonDialog>
