@inherits CommonDialogBase

<MudDialog ContentStyle="@ContentStyle">
    <DialogContent>
        <MudExpansionPanels>
            <MudExpansionPanel Text="Click to view affected hosts" Class="mb-5">
                @foreach (var (computer, _) in Hosts)
                {
                    <MudText>@computer.Name (@computer.IpAddress)</MudText>
                }
            </MudExpansionPanel>
        </MudExpansionPanels>
        @Content
    </DialogContent>
    <DialogActions>
        @Actions
    </DialogActions>
</MudDialog>
