@using RemoteMaster.Server.Abstractions
@inherits CommonDialogBase
@inject IDatabaseService DatabaseService

<CommonDialog ContentStyle="width: 500px;">
    <Content>
        @if (!string.IsNullOrWhiteSpace(_currentOrganizationalUnitName))
        {
            <MudText Typo="Typo.body1">Current OU: @_currentOrganizationalUnitName</MudText>
        }

        <MudSelect Label="Select target OU" @bind-Value="_selectedOrganizationalUnitId">
            @foreach (var organizationalUnit in _organizationalUnits)
            {
                <MudSelectItem Value="@organizationalUnit.NodeId">
                    @organizationalUnit.Name
                </MudSelectItem>
            }
        </MudSelect>
    </Content>
    <Actions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Move">Move</MudButton>
    </Actions>
</CommonDialog>
