@inherits CommonDialogBase

@using RemoteMaster.Server.Abstractions

@inject ISnackbar Snackbar
@inject IHostCommandService HostCommandService

<CommonDialog>
    <Content>
        <MudTextField T="string" Label="Domain" @bind-Value="@_domain" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Domain" OnAdornmentClick="DomainDiscovery" AdornmentAriaLabel="Domain Discovery" />
        <MudTextField T="string" Label="Username" @bind-Value="@_username" />
        <MudTextField T="string" Label="Password" @bind-Value="@_password" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" AdornmentAriaLabel="Show Password" />
    </Content>

    <Actions>
        <MudButton Color="Color.Primary" OnClick="JoinDomain" Disabled="HasConnectionIssues">Join Domain</MudButton>
        <MudButton Color="Color.Secondary" OnClick="LeaveDomain" Disabled="HasConnectionIssues">Leave Domain</MudButton>
    </Actions>
</CommonDialog>
