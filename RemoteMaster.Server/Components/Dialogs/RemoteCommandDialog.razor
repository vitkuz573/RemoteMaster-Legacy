@using RemoteMaster.Server.Abstractions

@inject IRemoteExecutionService RemoteExecutionService
@inject ISnackbar SnackBar

<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Host" @bind-Value="@_host" />
        <MudTextField T="string" Label="Local File Path" @bind-Value="@_localFilePath"/>
        <MudSelect T="string" Label="Command" @bind-Value="@_command" Dense="true">
            <MudSelectItem Value="@("install")">Install</MudSelectItem>
            <MudSelectItem Value="@("uninstall")">Uninstall</MudSelectItem>
        </MudSelect>
        <MudTextField T="string" Label="Arguments" @bind-Value="@_arguments"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Confirm">OK</MudButton>
    </DialogActions>
</MudDialog>
