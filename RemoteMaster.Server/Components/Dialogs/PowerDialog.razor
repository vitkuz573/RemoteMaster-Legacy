@using RemoteMaster.Server.Abstractions
@inherits CommonDialogBase
@inject IComputerCommandService ComputerCommandService
@inject IWakeOnLanService WakeOnLanService

<CommonDialog Hosts="@Hosts" ContentStyle="width: 500px;">
    <Content>
        <MudRadioGroup T="string" @bind-Value="@_selectedOption">
            <MudRadio Value="@("shutdown")">Shutdown</MudRadio>
            <MudRadio Value="@("reboot")">Reboot</MudRadio>
            <MudRadio Value="@("wakeup")">Wake Up</MudRadio>
        </MudRadioGroup>
    </Content>
    <Actions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Confirm">Confirm</MudButton>
    </Actions>
</CommonDialog>