@inherits CommonDialogBase

<CommonDialog Hosts="@Hosts" ContentStyle="width: 500px;">
    <Content>
        <MudRadioGroup T="string" @bind-SelectedOption="@_selectedOption">
            <MudRadio Option="@("shutdown")">Shutdown</MudRadio>
            <MudRadio Option="@("reboot")">Reboot</MudRadio>
            <MudRadio Option="@("wakeup")">Wake Up</MudRadio>
        </MudRadioGroup>
    </Content>
    <Actions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Confirm">Confirm</MudButton>
    </Actions>
</CommonDialog>