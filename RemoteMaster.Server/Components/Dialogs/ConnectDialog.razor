@inherits CommonDialogBase

@using RemoteMaster.Server.Abstractions

@inject IComputerCommandService ComputerCommandService
@inject IJSRuntime JsRuntime

<CommonDialog>
    <Content>
        <MudRadioGroup @bind-Value="@_selectedOption">
            <MudRadio Value="@("control")">Control</MudRadio>
            <MudRadio Value="@("view")">View</MudRadio>
        </MudRadioGroup>
    </Content>
    <Actions>
        <MudButton Color="Color.Primary" OnClick="Connect" Disabled="HasConnectionIssues">Connect</MudButton>
    </Actions>
</CommonDialog>
