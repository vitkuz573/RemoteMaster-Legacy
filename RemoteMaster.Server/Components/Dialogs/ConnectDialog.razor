@using RemoteMaster.Server.Abstractions
@inherits CommonDialogBase
@inject IComputerCommandService ComputerCommandService
@inject IJSRuntime JsRuntime

<CommonDialog Hosts="@Hosts" HubPath="@HubPath" StartConnection="@StartConnection" RequireConnections="@RequireConnections">
    <Content>
        <MudRadioGroup @bind-Value="@_selectedOption">
            <MudRadio Value="@("control")">Control</MudRadio>
            <MudRadio Value="@("view")">View</MudRadio>
        </MudRadioGroup>
    </Content>
    <Actions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Connect">Connect</MudButton>
    </Actions>
</CommonDialog>
