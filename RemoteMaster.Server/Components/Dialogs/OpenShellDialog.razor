@inherits CommonDialogBase
@using RemoteMaster.Shared.Models

<CommonDialog Hosts="@Hosts" ContentStyle="width: 500px;">
    <Content>
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h6">Select Shell:</MudText>
                <MudRadioGroup T="Shell" @bind-Value="@_selectedShell">
                    @foreach (Shell shell in Enum.GetValues(typeof(Shell)))
                    {
                        <MudItem xs="12">
                            <MudRadio T="Shell" Value="@shell" Dense="true">@shell.ToString()</MudRadio>
                        </MudItem>
                    }
                </MudRadioGroup>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h6">User Context:</MudText>
                <MudRadioGroup T="string" @bind-Value="@_selectedUser">
                    <MudItem xs="12">
                        <MudRadio T="string" Value="@("CurrentUser")" Dense="true">Current User</MudRadio>
                    </MudItem>
                    <MudItem xs="12">
                        <MudRadio T="string" Value="@("System")" Dense="true">System</MudRadio>
                    </MudItem>
                </MudRadioGroup>
            </MudItem>
        </MudGrid>
    </Content>
    <Actions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Connect" Disabled="@_isConnecting">
            @_connectButtonText
        </MudButton>
    </Actions>
</CommonDialog>
