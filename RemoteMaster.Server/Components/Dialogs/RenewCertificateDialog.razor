@inherits CommonDialogBase

@using RemoteMaster.Server.Abstractions
@using System.Security.Cryptography.X509Certificates

@inject ICrlService CrlService

<CommonDialog>
    <Content>
        <MudSelect T="X509RevocationReason" Label="Select revocation reason" @bind-Value="_selectedRevocationReason" Dense="true">
            @foreach (var reason in _revocationReasons)
            {
                <MudSelectItem Value="@reason" />
            }
        </MudSelect>
    </Content>
    <Actions>
        <MudButton Color="Color.Primary" OnClick="Confirm" Disabled="HasConnectionIssues">OK</MudButton>
    </Actions>
</CommonDialog>