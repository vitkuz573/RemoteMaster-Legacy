@using RemoteMaster.Server.Abstractions
@inherits CommonDialogBase
@inject IComputerCommandService ComputerCommandService

<CommonDialog Hosts="@Hosts">
    <Content>
        <MudRadioGroup T="bool" @bind-Value="@_selectedOption">
            <MudRadio Value="true">Enable</MudRadio>
            <MudRadio Value="false">Disable</MudRadio>
        </MudRadioGroup>
    </Content>
    <Actions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Ok">Ok</MudButton>
    </Actions>
</CommonDialog>