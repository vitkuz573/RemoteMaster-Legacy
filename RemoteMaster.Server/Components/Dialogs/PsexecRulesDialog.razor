@inherits CommonDialogBase

<CommonDialog Hosts="@Hosts">
    <Content>
        <MudRadioGroup T="bool" @bind-SelectedOption="@_selectedOption">
            <MudRadio Option="true">Enable</MudRadio>
            <MudRadio Option="false">Disable</MudRadio>
        </MudRadioGroup>
    </Content>
    <Actions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Ok">Ok</MudButton>
    </Actions>
</CommonDialog>