@inherits CommonDialogBase

@using RemoteMaster.Server.Abstractions

@inject IHostCommandService HostCommandService

<CommonDialog>
    <Content>
        <MudTextField T="string" Label="Output Path" @bind-Value="@_outputPath" FullWidth />
        <MudNumericField T="uint" HideSpinButtons="true" Label="Duration (in seconds)" @bind-Value="@_durationInSeconds" FullWidth />
        <MudNumericField T="uint" HideSpinButtons="true" Label="Video Quality" @bind-Value="@_videoQuality" FullWidth />
    </Content>
    <Actions>
        <MudButton Color="Color.Primary" OnClick="StartRecording" Disabled="HasConnectionIssues">Start Recording</MudButton>
        <MudButton Color="Color.Secondary" OnClick="StopRecording" Disabled="HasConnectionIssues">Stop Recording</MudButton>
    </Actions>
</CommonDialog>