@inherits CommonDialogBase

@using RemoteMaster.Server.Enums

<CommonDialog>
    <Content>
        <MudTextField Label="Caption" @bind-Value="_caption" />
        <MudTextField Label="Text" @bind-Value="_text" />
        
        <MudSelect T="MessageBoxButtons" Label="Button Type" @bind-Value="_selectedButtons" Dense="true">
            @foreach (var messageBoxButtons in Enum.GetValues<MessageBoxButtons>())
            {
                <MudSelectItem Value="@messageBoxButtons" />
            }
        </MudSelect>

        <MudSelect T="MessageBoxType" Label="Message Type" @bind-Value="_selectedType" Dense="true">
            @foreach (var messageBoxType in Enum.GetValues<MessageBoxType>())
            {
                <MudSelectItem Value="@messageBoxType" />
            }
        </MudSelect>
    </Content>
    <Actions>
        <MudButton Color="Color.Primary" OnClick="Show" Disabled="HasConnectionIssues">Show</MudButton>
    </Actions>
</CommonDialog>