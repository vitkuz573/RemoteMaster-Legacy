<MudDialog>
    <DialogContent>
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <MudCardContent>
                <MudTextField Label="Server" HelperText="Current server IP" @bind-Value="_model.Server" For="@(() => _model.Server)" ReadOnly="true" />
                <MudTextField Label="Group" HelperText="Max. 8 characters" @bind-Value="_model.Group" For="@(() => _model.Group)" />
            </MudCardContent>

            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary">Download Configuration</MudButton>
                <MudButton Color="Color.Secondary" OnClick="DownloadHost">Download Host</MudButton>
            </MudCardActions>
        </EditForm>
    </DialogContent>
</MudDialog>