@inherits CommonDialogBase

@using Microsoft.Extensions.Options
@using RemoteMaster.Server.Abstractions
@using RemoteMaster.Server.Options
@using System.IO.Abstractions

@inject IHostCommandService HostCommandService
@inject IOrganizationService OrganizationService
@inject IFileSystem FileSystem
@inject IOptions<WimBootOptions> Options

<CommonDialog>
    <Content>
        <MudTextField T="string" Label="Folder" @bind-Value="@_folderPath" />
        <MudTextField T="string" Label="WIM File" @bind-Value="_wimFile" />
        <MudTextField T="string" Label="Loader" @bind-Value="@_loaderCommand" />
        <MudTextField T="string" Label="Username" @bind-Value="@_username" />
        <MudTextField T="string" Label="Password" @bind-Value="@_password" InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" AdornmentAriaLabel="Show Password" />
    </Content>
    <Actions>
        <MudButton Color="Color.Primary" OnClick="Boot">Boot</MudButton>
    </Actions>
</CommonDialog>
