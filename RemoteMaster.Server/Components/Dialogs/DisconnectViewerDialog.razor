@using RemoteMaster.Shared.Enums

<MudDialog>
    <DialogContent>
        <MudText>@Viewer.UserName</MudText>

        <MudRadioGroup T="DisconnectReason" @bind-Value="@_selectedDisconnectReason">
            @foreach (var disconnectReason in Enum.GetValues<DisconnectReason>())
            {
                <MudItem xs="12">
                    <MudRadio T="DisconnectReason" Value="@disconnectReason" Dense="true">@disconnectReason.ToString()</MudRadio>
                </MudItem>
            }
        </MudRadioGroup>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Disconnect">Disconnect</MudButton>
    </DialogActions>
</MudDialog>
