    }

    .bg-transparent {
        background-color: transparent;
    }

    .bg-white {
        background-color: #ffffff;
    }

    .rounded-md {
        border-radius: 0.375rem;
    }

    .overflow-hidden {
        overflow: hidden;
    }

    .flex {
        display: flex;
    }

    .items-center {
        align-items: center;
    }

    .justify-center {
        justify-content: center;
    }

    .h-32 {
        height: 8rem;
    }

    .bg-de876c {
        background-color: #de876c;
    }

    .bg-gray-200 {
        background-color: #edf2f7;
    }

    .max-h-32 {
        max-height: 8rem;
    }

    .object-cover {
        object-fit: cover;
    }

    .object-center {
        object-position: center;
