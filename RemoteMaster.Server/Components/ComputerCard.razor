<MudCard>
    <MudCardContent Class="flex h-32 items-center justify-center">
        <MudImage Src="@ThumbnailUri" Alt="Thumbnail" Class="h-auto max-h-32 w-full object-contain" draggable="false" />
    </MudCardContent>
    <MudCardActions Class="flex items-center justify-between p-4">
        <MudCheckBox T="bool" Value="@IsSelected" ValueChanged="@HandleCheckboxChange" Label="@Computer.Name" />
    </MudCardActions>
</MudCard>