<StatusMessage Message="@StatusMessage" />
<h3 class="mb-4 text-lg font-bold">Recovery codes</h3>
<div class="border-l-4 border-yellow-500 bg-yellow-100 p-4 text-yellow-700" role="alert">
    <p>
        <strong>Put these codes in a safe place.</strong>
    </p>
    <p>
        If you lose your device and don't have the recovery codes you will lose access to your account.
    </p>
</div>
<div class="mt-6">
    <div class="rounded-md bg-gray-100 p-4 shadow-sm">
        <div class="grid-cols-2 grid gap-4">
            @foreach (var recoveryCode in RecoveryCodes)
            {
                <div class="rounded-md bg-white p-2 shadow-sm">
                    <code class="block text-center font-mono text-sm">@recoveryCode</code>
                </div>
            }
        </div>
    </div>
</div>
