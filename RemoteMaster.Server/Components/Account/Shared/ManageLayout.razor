    <h1 class="text-3xl font-bold text-center text-gray-800 mb-10">Manage your account</h1>

    <div class="container mx-auto px-4">
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="md:flex">
                <div class="w-full md:w-1/4 bg-gray-50 p-4">
                    <ManageNavMenu />
                </div>
                <div class="w-full md:w-3/4 p-6">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Change your account settings</h2>
