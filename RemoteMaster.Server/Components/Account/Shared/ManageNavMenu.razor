@using Microsoft.AspNetCore.Identity
@using RemoteMaster.Server.Data

@inject SignInManager<ApplicationUser> SignInManager

<ul class="flex flex-col text-gray-800">
    <li>
        <NavLink class="block px-4 py-3 mt-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-md shadow-sm hover:bg-blue-500 hover:text-white transition duration-300" href="Account/Manage" Match="NavLinkMatch.All">Profile</NavLink>
    </li>
    <li>
        <NavLink class="block px-4 py-3 mt-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-md shadow-sm hover:bg-blue-500 hover:text-white transition duration-300" href="Account/Manage/Email">Email</NavLink>
    </li>
    <li>
        <NavLink class="block px-4 py-3 mt-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-md shadow-sm hover:bg-blue-500 hover:text-white transition duration-300" href="Account/Manage/ChangePassword">Password</NavLink>
    </li>
    @if (hasExternalLogins)
    {
        <li>
            <NavLink class="block px-4 py-3 mt-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-md shadow-sm hover:bg-blue-500 hover:text-white transition duration-300" href="Account/Manage/ExternalLogins">External logins</NavLink>
        </li>
    }
    <li>
        <NavLink class="block px-4 py-3 mt-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-md shadow-sm hover:bg-blue-500 hover:text-white transition duration-300" href="Account/Manage/TwoFactorAuthentication">Two-factor authentication</NavLink>
    </li>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
