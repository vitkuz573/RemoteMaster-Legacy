@using RemoteMaster.Shared.Models

<MudDialog>
    <DialogContent>
        <MudContainer>
            <MudExpansionPanels>
                <MudExpansionPanel Text="Click to view affected hosts">
                    @foreach (var (computer, connection) in Hosts)
                    {
                        <MudText>@computer.Name (@computer.IPAddress)</MudText>
                    }
                </MudExpansionPanel>
            </MudExpansionPanels>
            <MudGrid>
                <MudItem xs="6">
                    <MudRadioGroup T="Shell" @bind-SelectedOption="@_selectedShell">
                        @foreach (Shell shell in Enum.GetValues(typeof(Shell)))
                        {
                            <MudRadio Option="@shell">@shell.ToString()</MudRadio>
                        }
                    </MudRadioGroup>
                </MudItem>
                <MudItem xs="6">
                    <MudRadioGroup @bind-SelectedOption="@_selectedUser">
                        <MudRadio Option="@("current")">Current User</MudRadio>
                        <MudRadio Option="@("system")">System</MudRadio>
                    </MudRadioGroup>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Connect">Connect</MudButton>
    </DialogActions>
</MudDialog>
