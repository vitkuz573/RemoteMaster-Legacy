{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [ "ESNext", "DOM" ],
    "outDir": "wwwroot/js",
    "removeComments": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "useDefineForClassFields": true,
    "rootDir": "src/ts",
    "skipLibCheck": true
  },
  "include": [
    "src/ts/**/*.ts",
    "Components/Library/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
