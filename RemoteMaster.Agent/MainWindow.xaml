<Window x:Class="RemoteMaster.Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RemoteMaster.Agent"
        Title="RemoteMaster Configuration" SizeToContent="WidthAndHeight">

    <!-- Main Grid Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Information Panel -->
        <GroupBox Grid.Row="0" Header="Configuration" Margin="20">
            <StackPanel Margin="10">
                <!-- Added margin here -->
                <TextBlock x:Name="ServerAddressTextBlock" Text="Server Address: 192.168.1.1" Margin="0,10,0,0" FontSize="14"/>
                <!-- Font size reduced -->
                <TextBlock x:Name="GroupTextBlock" Text="PC Group: Group1" Margin="0,10,0,0" FontSize="14"/>
                <!-- Font size reduced -->
            </StackPanel>
        </GroupBox>

        <!-- Button Panel -->
        <DockPanel Grid.Row="1" Margin="20">
            <Button DockPanel.Dock="Left" Content="Install/Update" Width="120" Height="30" Margin="5,0,5,0"/>
            <Button DockPanel.Dock="Left" Content="Uninstall" Width="120" Height="30" Margin="5,0,5,0"/>
        </DockPanel>
    </Grid>
</Window>
