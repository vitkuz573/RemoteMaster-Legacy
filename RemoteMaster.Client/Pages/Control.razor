@page "/{Host}/control"

@if (!string.IsNullOrEmpty(_screenDataUrl))
{
    <img id="screenImage" src="@_screenDataUrl" draggable="false" width="1494" onload="window.revokeUrl(this.src)" @onmousemove="OnMouseMove" @onmousedown="OnMouseUpDown" @onmouseup="OnMouseUpDown" />
    <div>
        <label for="qualityInput">Quality: </label>
        <input id="qualityInput" type="number" min="1" max="100" @onchange="QualityChanged" />
    </div>
}
else
{
    <p>Establishing connection...</p>
}
