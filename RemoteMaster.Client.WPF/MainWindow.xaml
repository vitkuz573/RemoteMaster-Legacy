<Window x:Class="RemoteMaster.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteMaster.Client.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Display" x:Name="displays" Click="OnDisplayClick" />
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Quality: " />
                    <Slider x:Name="qualitySlider" Width="100" Minimum="1" Maximum="100" Value="50" SmallChange="1" LargeChange="10" ValueChanged="QualitySlider_ValueChanged" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Image x:Name="screenImage" MouseMove="OnMouseMove" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </DockPanel>
</Window>
