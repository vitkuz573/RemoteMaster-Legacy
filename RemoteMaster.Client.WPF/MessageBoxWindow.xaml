<Window x:Class="RemoteMaster.Client.WPF.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Message Box" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label Content="Caption" />
        <TextBox x:Name="captionTextBox" />
        <Label Content="Text" />
        <TextBox x:Name="textTextBox" />
        <Button Content="Send" Margin="0,10,0,0" Click="OnSendClick" />
    </StackPanel>
</Window>
